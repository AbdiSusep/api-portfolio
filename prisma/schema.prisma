generator client {
  provider = "prisma-client-js"
  output   = "@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Services {
  id          Int @id @default(autoincrement())
  name        String
  description String
  image       String
  active      Int @default(0)
}

model Tools {
  id          Int @id @default(autoincrement())
  name        String
  image       String
  active      Int @default(0)
}

model Socials {
  id          Int @id @default(autoincrement())
  name        String
  url         String
  image       String
  active      Int @default(0)
}

model Skills {
  id          Int @id @default(autoincrement())
  name        String
  image       String
  active      Int @default(0)

  project_skills Project_skills[]
}

model Categories {
  id          Int @id @default(autoincrement())
  name        String
  image       String
  active      Int @default(0)

  projects Projects[]
}

model Project_images {
  id          Int @id @default(autoincrement())
  project     Projects @relation(fields: [projectId], references: [id])
  projectId   Int
  image       String
  order       Int
  active      Int @default(0)
}

model Project_skills {
  id          Int @id @default(autoincrement())
  project     Projects @relation(fields: [projectId], references: [id])
  projectId   Int
  skill       Skills @relation(fields: [skillId], references: [id])
  skillId     Int
}

model Projects {
  id          Int @id @default(autoincrement())
  category    Categories @relation(fields: [categoryId], references: [id])
  categoryId  Int
  slug        String
  title       String
  description String
  url         String
  github      String
  year        String
  active      Int @default(0)

  project_images Project_images[]
  project_skills Project_skills[]
}